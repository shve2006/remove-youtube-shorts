// ==UserScript==
// @name         YouTube Shorts Button Killer
// @namespace    http://tampermonkey.net/
// @version      1.0
// @description  Hide YouTube Shorts button (Top Left) efficiently
// @match        https://www.youtube.com/*
// @run-at       document-idle
// ==/UserScript==

(function() {
    'use strict';

    function hideShortsButton() {
        const shortsButton = document.querySelector('ytd-mini-guide-entry-renderer[title="Shorts"]');
        if (shortsButton) {
            shortsButton.style.display = 'none';
        }
    }

    let lastUrl = location.href;
    new MutationObserver(() => {
        if (location.href !== lastUrl) {
            lastUrl = location.href;
            hideShortsButton();
        }
    }).observe(document.body, {childList: true, subtree: true});

    hideShortsButton();
})();
